{
  "manifest_version": 2,

  "name": "Facebook Ad Remover",
  "description": "This extension removes all ads and sponsored content from a Facebook page",
  "version": "0.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
        "matches": [
        "http://*.facebook.com/*","https://*.facebook.com/*"],
        "js": ["main.js"],
        "run_at": "document_end",
        "all_frames": true
    }
  ]
}